{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/ai/**/*.ts"],
  "exclude": ["node_modules", "src/app", "src/components", "src/contexts", "src/hooks", "src/lib"]
}
