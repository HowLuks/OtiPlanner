rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for any signed-in user.
    // This is a common rule for development, but you should secure your
    // data more granularly for production.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
